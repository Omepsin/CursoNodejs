<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.pergunta %></p>

        <h3>Responda</h3>
        <label>Digite a resposta:</label>
        <form name="form-resp" action="/responder" method="POST">
            <textarea placeholder="Digite a resposta" class="form-control" name="corpo"></textarea><br/>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn">Responder</button><hr>
        </form>

        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <br/>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %><br/></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/scriptsBS.ejs'); %>